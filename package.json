    "nodemon": "1.18.9",
    "nyc": "13.2.0",
    "prettier": "1.16.1",
    "sinon": "7.2.3"
  },
  "dependencies": {
    "fastify": "1.13.4",
    "fastify-openapi-glue": "1.0.4",
    "mongoose": "5.4.6"
